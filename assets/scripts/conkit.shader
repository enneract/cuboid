models/weapons/ckit/screen
{
	{
    videoMap video/ckit.roq
	}
}

gfx/ckit/background
{
  sort 16
  {
    map gfx/ckit/background.jpg
    blendFunc add
    rgbGen wave sin 0.15 0.02 0 129
  }
}

gfx/ckit/overlay
{
  sort 16
	{
		map gfx/ckit/noise.jpg
		blendFunc filter
    tcMod scroll 123.456 789.012
	}
}

